#!/usr/bin/env bash

# indent by a number of spaces, 4 by default
indent() {
	# exit with an empty buffer
	[ ${#buffer[@]} = 0 ] && return 1
	# take arg if given, default to 4
	[ "$1" ] && spaces="$1" || spaces=4
	# loop to prepend spaces to line
	i=0
	while [ $i -ne "$spaces" ]; do
		buffer[line]=" ${buffer[line]}"
		((i++))
	done
}

# unindent up to the first non-space character or a number of times
undent() {
	# exit with an empty buffer
	[ ${#buffer[@]} = 0 ] && return 1
	# take arg if given, default to 4
	[ "$1" ] && spaces="$1" || spaces=4
	# loop
	i=0
	while [ $i -ne "$spaces" ]; do
		# break if the character about to be removed isn't a space
		[ "${buffer[line]::1}" = " " ] || break
		# remove the first character of the string
		buffer[line]="${buffer[line]##?}"
		((i++))
	done
}

# change the $1h (strong) word of a line to $2
bim_cw() {
	sldkf
}

# create a shell function with a name
# optionally, a number of indent spaces can be given
bim_shellfunc() {
	# name defaults to func if not given
	[ "$1" ] && name="$1" || name="func"
	[ "$2" ] && indent="$2" || indent="4"
	# create 3 lines
	bim_blank; bim_blank; bim_blank
	# create function skeleton
	buffer[line-2]="${name}() {"
	i=0
	while [ $i -ne "$indent" ]; do
		buffer[line-1]="${buffer[line-1]} "
		((i++))
	done
	buffer[line]="}"
	# edit contents
	bim_up 1; bim_edit
}

# swap the current line with the next
# or with another relative position if given
bim_swap() {
	[ "$1" ] && swappos="$1" || swappos=1
	swapbuf="${buffer[line+swappos]}"
	buffer[line+swappos]="${buffer[line]}"
	buffer[line]="$swapbuf"
}

# these keybinds are defaults + functions in this file.
keybinds() {
    case "${key}" in
    
        # motions
        k) bim_up 1;;
        j) bim_down 1;;
        K) bim_up $((LINES - 4));;
        J) bim_down $((LINES - 4));;
		  g) bim_bof;;
		  G) bim_eof;;
        
        # editing
        i) bim_edit;;
        d) bim_delete;;
        c) bim_clear;;
        o) bim_insert;;
        O) bim_backinsert;;
        n) bim_blank;;
        N) bim_backblank;;
        y) bim_yank;;
        p) bim_paste;;
    
        # misc
        :) bim_prompt;;

		  ### rc functions ###
		  I) indent 4;;
		  U) undent 4;;
		  F) cursor show; bim_shellfunc "$(misc_prompt "shell function: ")";;
		  S) bim_swap;;
    
    esac
}
